@using MyBlog.Entities
@model MyBlogUser

@{
    ViewBag.Title = "Profiliniz";
}

<div class="container">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <hr />
    </div>

    <div class="row">
        <div class="col-md-2">
            <img src="~/Images/@Model.ProfileImageFile" class="img-circle" width="128" height="128" />
        </div>

        <div class="col-md-10">
            <h3>@(Model.Name + " " + Model.Surname)</h3>
            <br />
            <h4><b>Username: </b>@Model.Username</h4>
            <h4><b>Email: </b>@Model.Email</h4>
            <br />
            <h4><a href="#">More... </a></h4>
        </div>



    </div>
</div>
