@model IEnumerable<MyBlog.Entities.Note>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <h2>Notlar</h2>
        <p>
            @MyBootStrap.LinkButton("/Note/Create", "primary", "btn-sm", "Oluştur", "plus", " Oluştur")
        </p>
    </div>
    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td width="180">
                        <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id" type="button"><span class="glyphicon glyphicon-comment"></span></button>
                        @MyBootStrap.LinkButton("notebtn1", "/Note/Edit/" + item.Id, "warning", "btn-sm", "Edit", "edit", "  ")
                        @MyBootStrap.LinkButton("notebtn2", "/Note/Details/" + item.Id, "info", "btn-sm", "Detay", "search", "  ")
                        @MyBootStrap.LinkButton("notebtn3", "/Note/Delete/" + item.Id, "danger", "btn-sm", "Sil", "trash", "  ")
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@MyBootStrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

<script src="~/Scripts/comment.js"></script>