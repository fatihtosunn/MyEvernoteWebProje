@using MyBlog.BusinessLayer
@using MyBlog.Entities
@using Myevernote.Webapp.Models

@*@{
    CategoryManager cm = new CategoryManager();
    List<Category> List = cm.GetCategories();
}*@
@*@{
    CategoryManager categorymanager = new CategoryManager();
    categorymanager.ListQueryable();
}*@
@{ 
    List<Category> list = CacheHelper.GetCategoriesFromCache();
}

<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item"><span class="glyphicon glyphicon-bookmark"></span> Tümü</a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><span class="glyphicon glyphicon-bookmark"></span> @cat.Title</a>
    }

</div>
